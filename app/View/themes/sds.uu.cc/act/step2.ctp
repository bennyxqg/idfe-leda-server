<script>
$(function(){
	$("html,body").animate({scrollTop:$(".main4").offset().top},1000);
	//图片验证
	
	var bar = $('.bar');
	var percent = $('.percent');
	var showimg = $('#showimg');
	var progress = $(".progress");
	var files = $(".files");
	var btn = $(".btn span");
	$("#fileupload").wrap("<form id='myupload' action='//sds.uu.cc/act/up_img' method='post' enctype='multipart/form-data'></form>");
    $("#fileupload").change(function(){
		$("#myupload").ajaxSubmit({
			dataType:  'json',
			beforeSend: function() {
        		showimg.empty();
				progress.show();
        		var percentVal = '0%';
        		bar.width(percentVal);
        		percent.html(percentVal);
				btn.html("上传中...");
    		},
    		uploadProgress: function(event, position, total, percentComplete) {
        		var percentVal = percentComplete + '%';
        		bar.width(percentVal);
        		percent.html(percentVal);
    		},
			success: function(data) {
				files.html("<b>"+data.name+"("+data.size+"k)</b> <span class='delimg' rel='"+data.pic+"'>删除</span>");
//				var img = "//demo.helloweba.com/upload/files/"+data.pic;
//				showimg.html("<img src='"+img+"'>");
				btn.html("上传头像");
			},
			error:function(xhr){
				btn.html("上传失败");
				bar.width('0')
				files.html(xhr.responseText);
			}
		});
	});
	$(document).on('click', '.delimg', function() { 
		var pic = $(this).attr("rel");
		$.post("//sds.uu.cc/act/up_img?act=delimg",{imagename:pic},function(msg){
			if(msg==1){
				files.html("删除成功.");
				showimg.empty();
				progress.hide();
			}else{
				alert(msg);
			}
		});
	});

	//验证
	$('.test_go').click(function(){
		var myreg = /^1[34578]\d{9}$/;
		var user_pic = $('.delimg').attr("rel");
		var phone = $('#ipt_phone').val();
		var name = $('#ipt_name').val();
		var qq = $('#ipt_qq').val();
		var address = $('#ipt_address').val();
		var story = $('#ipt_story').val();
		var obj_file = document.getElementById("fileupload");
		if(obj_file.value == ""){
			alert("请先选择上传头像");
			return;
		}else if(name == ''){
			alert('姓名不能为空！');
			return;
		}else if(phone == '' || !myreg.exec(phone)){
			alert('请输入正确的手机号！');
			return;
		}else if(qq == ''){
			alert('QQ号不能为空！');
			return;
		}else if(address == ''){
			alert('地址不能为空！');
			return;
		}else if(story == ''){
			alert('故事不能为空！');
			return;
		}else{
			$.ajax({
				type:"POST",
				url:"//sds.uu.cc/act/2",
				data:{icon:user_pic,name:name,phone:phone,qq:qq,address:address,story:story},
				dataType:"json",
				success:function(res){
					if(res.ret == 2){
						alert("您已经参加过报名！");
					}else if(res.ret == 0){
						 alert("报名成功，点击确定前往答题！");
						 var site = "//sds.uu.cc/act/3?phone="+phone;
						 window.location=site;
					}else{
					   alert("预约失败！");
					}
				}
			});
		}
			
	})
	
	
	//页面视频	   
	$('.video_btn_link').click(function(){
		var vedioSrc = this.name;
		$('.s_p_k video').attr('src',vedioSrc);
		$('.zhezao').show();
		$('.s_p_k').show();
		})
	$('.close').click(function(){
		$('.s_p_k video').attr('src','');
		$('.s_p_k').hide();
		$('.zhezao').hide();
		})
})


