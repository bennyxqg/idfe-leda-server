<script type="text/javascript">
    $(function () {
        var w = null;
        var xk = $(".run_content");
        function init() {
            w = $(window).width() - 220;
            xk.width(w * xk.children("li").size());
            console.log(w);
            xk.children("li").css({ "width": w + "px", "float": "left" });
            $(".banner").width(w);
        }
        function run() {
            xk.animate({ "left": "-" + w }, 1000, function () {
                xk.css({ "left": 0 }).children("li:first").appendTo(this);
                qht();
            });
        }
        init();
        setInterval(run, 8000);
        $(window).resize(function () {
            init();
        })

        function qht() {
            if ($(".qiehuan ul li:first").hasClass("cur")) {
                $(".qiehuan ul li:first").removeClass("cur").siblings().addClass("cur");
            } else $(".qiehuan ul li:first").addClass("cur").siblings().removeClass("cur");
        }

        $(".qiehuan ul li").click(function () {
            if ($(this).hasClass("cur")==false) {
                xk.animate({ "left": "-" + w + "px" }, 1000, function () {
                    xk.css({ "left": 0 }).children("li:first").appendTo(xk);
                    qht();
                });
            }
        });

        $(".li_bk .nav_b li").click(function () {
            xk.stop();
            var i = $(this).index();
            $(this).addClass("cur").siblings().removeClass("cur");
            $(this).parent().parent().find(".li_bkbg").children(":eq(" + i + ")").show().siblings().hide();
        })
        $(".flex_left").click(function () {
            xk.stop();
            xk.css({ "left": "-" + w + "px" }).children("li:last").prependTo(xk);
            xk.animate({ "left": 0 }, 1000);
            qht();
        })
        $(".flex_right").click(function () {
            xk.stop();
            xk.animate({ "left": "-" + w + "px" }, 1000, function () {
                xk.css({ "left": 0 }).children("li:first").appendTo(xk);
                qht();
            });
        })
    })
</script>
